{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "g++ build",
            "command": "C:\\Program Files\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-Wfatal-errors",
                "-Wextra",
                "-Wall",
                "-g",
                "${relativeFile}",
                "-o",
                "${relativeFileDirname}\\${fileBasenameNoExtension}.exe",
                "-std=c++11"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
